# Look and Feel
theme = dracula
font-family = CaskaydiaMono Nerd Font
background-opacity = 0.95
font-size = 20
cursor-style = block
#adjust-cell-height = 35%

mouse-hide-while-typing = true
mouse-scroll-multiplier = 2

window-colorspace = display-p3
window-padding-balance = true 
window-save-state = always
macos-titlebar-style=transparent

# Keybindings
keybind = shift+ctrl+alt+super+r=reload_config
keybind = shift+ctrl+alt+super+s>h=new_split:down
keybind = shift+ctrl+alt+super+s>v=new_split:right
keybind = shift+ctrl+alt+super+s>x=close_surface
keybind = shift+ctrl+alt+super+s>up=goto_split:top
keybind = shift+ctrl+alt+super+s>right=goto_split:right
keybind = shift+ctrl+alt+super+s>down=goto_split:bottom
keybind = shift+ctrl+alt+super+s>left=goto_split:left

# Shell
shell-integration-features = no-cursor,sudo,no-title
copy-on-select = clipboard